<h1>New Post</h1>


<%= form_with scope: :post, url: posts_path, local: true do |form| %>
  <p>
    <%= form.label :post_caption %><br>
    <%= form.text_field :caption %>
  </p>

  <div class="field">
    add an image....
    <%= form.file_field :image %>
  </div>

  <p>
    <%= form.submit %>
  </p>
<% end %>


<%= link_to 'Back', posts_path %>
